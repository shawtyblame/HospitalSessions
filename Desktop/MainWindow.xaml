<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        MinHeight="450"
        MinWidth="800"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="loginBox" Grid.Row="0" Height="35" Width="300" Background="CadetBlue"></TextBox>
        <Label Margin="250,13,436,55">Логин</Label>
        <TextBox x:Name="passBox" Grid.Row="1" Height="35" Width="300" Background="CadetBlue" Margin="250,55,250,54"></TextBox>
        <Label Margin="250,13,436,54" Grid.Row="1">Пароль</Label>
        <Button Click="Button_Click" Grid.Row="3" Height="35" Width="300">Войти</Button>
    </Grid>
</Window>

